<!DOCTYPE html>
<html>
<head>
  <title>Shoes</title>
</head>
<body>
  <h1>{{ store.getName }}</h1>

  <h2>Brands</h2>

  {% if brands is not empty %}
    <ul>
      {% for brand in brands %}
        <li><a href="/brand/{{ brand.getId }}">{{ brand.getName }}</a></li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No Brands Added</p>
  {% endif %}

  <h3>Add Brand</h3>
  <form action="/store/{{ store.getId }}" method="post">
    <label for="brand_id">Select Brand:</label>
    <select id="brand_id" name="brand_id" required>
      {% for brand in all_brands %}
        <option value="{{ brand.getId }}">{{ brand.getName }}</option>
      {% endfor %}
    </select>
    <button type="submit">Add Brand</button>
  </form>

  <h2>Update {{ store.getName }}</h2>
  <form action="/store/{{ store.getId }}" method="post">
    <input type="hidden" name="_method" value="patch" />
    <label for="name">Name:</label>
    <input id="name" name="name" type="text" value="{{ store.getName }}" required />
    <button type="submit">Update</button>
  </form>

  <h2>Delete {{ store.getName }}</h2>
  <form action="/store/{{ store.getId }}" method="post">
    <input type="hidden" name="_method" value="delete" />
    <button type="submit">Delete</button>
  </form>

  <p><a href="/stores">Return to Store List</a></p>

</body>
</html>
