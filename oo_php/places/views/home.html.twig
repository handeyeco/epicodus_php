<html>
<head>
  <title>Places I've Been</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Places I've Been</h1>

    {% if places is not empty %}
      {% for place in places %}

        <h3>{{ place.getAttraction }}</h3>
        <p>{{ place.city }}, {{ place.state }}</p>

      {% endfor %}
    {% endif %}

    <form action='/place' method="post">
      <div class="form-group">
        <label for="city">City:</label>
        <input name="city" id="city" class="form-control" type="text" required />
      </div>
      <div class="form-group">
        <label for="state">State:</label>
        <input name="state" id="state" class="form-control" type="text" required />
      </div>
      <div class="form-group">
        <label for="attraction">Attraction:</label>
        <input name="attraction" id="attraction" class="form-control" type="text" required />
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>

    <form action='/delete' method="post">
      <button type="submit" class="btn btn-danger">Delete All</button>
    </form>
  </div>
</body>
</html>
